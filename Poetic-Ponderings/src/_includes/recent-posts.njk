<!--Recent Posts-->                
                
                <a href="{{ post.url }}" class="trending-news-box">

                    <div class="trending-news-image-box">
                         <span class="trending-number place-items-center"> {{ post.data.articleNumber }} </span>

                        <img src="{{ post.data.image }}" alt="{{post.data.imageAlt}}" class="article-image">
                        
                    </div>

                    <div class="trending-news-data">

                        <h3 class="title article-title">
                                {{ post.data.title }}
                         </h3>

                        <div class="article-data">
                            
                            <span>{{ post.data.date | postDate}}</span>
                            <span class="article-data-spacer"></span>
                            <span>{{ post.data.author }}</span>
                        </div>

                   
                    </div>
             </a>
